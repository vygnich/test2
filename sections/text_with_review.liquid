                                <path d="M15.4879 7.04236L12.3168 9.80986L13.2667 13.9302C13.317 14.1456 13.3027 14.371 13.2255 14.5783C13.1483 14.7856 13.0118 14.9655 12.8329 15.0956C12.654 15.2257 12.4408 15.3002 12.2198 15.3098C11.9988 15.3193 11.7799 15.2636 11.5905 15.1494L7.99681 12.9697L4.41087 15.1494C4.22143 15.2636 4.00254 15.3193 3.78156 15.3098C3.56058 15.3002 3.34732 15.2257 3.16845 15.0956C2.98958 14.9655 2.85302 14.7856 2.77586 14.5783C2.6987 14.371 2.68436 14.1456 2.73462 13.9302L3.68314 9.81407L0.511344 7.04236C0.343584 6.89767 0.222277 6.70667 0.162633 6.49332C0.10299 6.27996 0.107665 6.05375 0.176074 5.84304C0.244483 5.63233 0.373579 5.44651 0.547174 5.30888C0.720769 5.17125 0.931134 5.08794 1.15189 5.06939L5.33267 4.70728L6.96462 0.814778C7.04985 0.610531 7.1936 0.436066 7.37777 0.31335C7.56195 0.190633 7.77831 0.125153 7.99963 0.125153C8.22094 0.125153 8.4373 0.190633 8.62148 0.31335C8.80565 0.436066 8.9494 0.610531 9.03463 0.814778L10.6715 4.70728L14.8509 5.06939C15.0716 5.08794 15.282 5.17125 15.4556 5.30888C15.6292 5.44651 15.7583 5.63233 15.8267 5.84304C15.8951 6.05375 15.8998 6.27996 15.8401 6.49332C15.7805 6.70667 15.6592 6.89767 15.4914 7.04236H15.4879Z" fill="#FFD600"/>
                            </svg>
                        </div>
                    {% endfor %}
                </div>
                <div class="review_text">
                  {{ section.settings.text_review }}
                </div>
                <div class="angle">
                    <svg fill="none" height="80" viewbox="0 0 117 80" width="117" xmlns="http://www.w3.org/2000/svg">
                        <path d="M117 40L0.749996 79.8372L0.75 0.162825L117 40Z" fill="#1F60AE"/>
                    </svg>
                </div>
            </div>
            <div class="review_author">
                {% if section.settings.image != blank %}
                    <div class="review_ava">
                        {{ section.settings.image | image_url: width: 3840
                    | image_tag:
                    loading: 'lazy',
                    height: image_height,
                    class: image_class,
                    sizes: sizes}}
                    </div>
                    <div class="author_text">
                        <div class="author_name">
                            {{ section.settings.author_name }}
                        </div>
                        <div class="author_post">
